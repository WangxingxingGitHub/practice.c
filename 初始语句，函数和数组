//                                                            初识选择语句
#include<stdio.h>
int main()
{
	int input = 0;
	printf("你要好好学习吗?(1/0)\n");//1.好好学习  0.不想学习
	scanf("%d",&input);
	if(input == 1)
		printf("找到好offer\n");
	else
		printf("回家卖红薯\n");
	return 0;
}
//-----------------------------------------------------------


//                                                            初识循环语句
#include<stdio.h>
int main()
{
	int line = 0;
	while(line<20000)
	{
		printf("敲一行代码\n");
		line++;
	}
	printf("找到好offer\n");
	return 0;
}
//-----------------------------------------------------------


//                                                            初识函数
#include<stdio.h> 
int Add(int x,int y)
{
	int z = x+y;
	return z;
}
int main()
{
	int num1 = 0;
	int num2 = 0;
	int sum = 0;
	int input = 0;
	scanf("%d%d",&num1,&num2);
	sum = Add(num1,num2);
	printf("sum = %d",sum);
	return 0;
}
