//                                                           static修饰局部变量改变其生命周期
#include<stdio.h>
void test()
{
  int a = 0;
	//static int a = 0;
	a++;
	printf("%d ",a);
}

int main()
{
	int i = 0;
	while(i<5)
	{
		test();
		i++;
	}
	return 0;
}


//                                                           static修饰全局变量改变其作用域
//       add.c
//int g_val = 2020;
static int g_val = 2020;

//       main.c
#include<stdio.h>
int main()
{
	extern int g_val;  //extern声明外部的变量
	printf("g_val = %d\n",g_val);
	return 0;
}



//                                                           static修饰函数改变链接属性
//       add.c
int Add(int x,int y)
//static int Add(int x,int y)
{
	int  z= x+y;
	return z;
}

//       main.c
#include<stdio.h>
extern int Add(int,int);//声明外部函数只需要说明数据类型
int main()
{
	int a = 10;
	int b = 20;
	int sum = Add(a,b);
	printf("sum = %d\n",sum);
	return 0;
}
